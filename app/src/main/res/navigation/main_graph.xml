<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/fragment_home">
    <fragment
        android:id="@+id/fragment_home"
        android:name="presentation.ui.home.HomeFragment"
        android:label="homepage"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/asset_list_fragment"
        android:name="presentation.ui.assets.AssetListFragment"
        android:label="assetslist"
        tools:layout="@layout/fragment_asset_list" />
    <fragment
        android:id="@+id/portfolio_list_fragment"
        android:name="presentation.ui.portfolios.PortfolioListFragment"
        android:label="portfolio"
        tools:layout="@layout/fragment_portfolio_list" >
        <action
            android:id="@+id/action_to_portfolio_details_fragment"
            app:destination="@id/portfolio_details_fragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/portfolio_details_fragment"
        android:name="presentation.ui.portfolios.PortfolioDetailsFragment"
        android:label="portfolioDetails"
        tools:layout="@layout/fragment_portfolio_details" >
        <argument
            android:name="portfolioId"
            app:argType="integer"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/fragment_settings"
        android:name="presentation.ui.settings.SettingsFragment"
        android:label="settings"
        tools:layout="@layout/fragment_settings">
        <action
        android:id="@+id/lets_create_dialog_for_selecting_currency"
        app:destination="@id/chooseDefaultCurrencyFragment" />
    </fragment>

    <dialog
        android:id="@+id/chooseDefaultCurrencyFragment"
        android:name="presentation.ui.settings.stringselector.CurrencyBottomSheetFragment"
        android:label="ChooseDefaultCurrencyFragment" />
</navigation>
